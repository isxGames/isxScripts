<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<Template Name='CodeButton' template='Button'>
    <X>1</X>    <Y>1</Y>    <Width>1</Width>    <Height>1</Height>    <Alignment>Left</Alignment>
    <Text>This should be invisible</Text>    <visible>0</visible>
  </Template>
<Template Name='chkbox' template='checkbox'><Width>30</Width><Height>23</Height></Template>
	<!-- Main UI Window -->
	<Window Name='EQ2OgreZoneResetXML' Template='Window'>
		<X>20</X>
		<Y>20</Y>
		<Width>700</Width>
		<Height>400</Height>
		<Client Template="Window.Client" />
		<StorePosition>1</StorePosition>
		<Title>Ogre Zone Resetter  - UI Ver: 1.03</Title>
		<TitleBar Template="Window.TitleBar">
			<X>0</X>
			<Y>0</Y>
			<Width>100%</Width>
			<Height>5%</Height>
			<Children>
				<Text Name="Title" Template="Window.TitleBar.Title">
					<Alignment>Center</Alignment>
				</Text>
				<CommandButton Name="Custom Quit Button" Template="Window.TitleBar.Close">
          <X>r20</X>
          <Y>0</Y>
          <Width>20</Width>
          <Height>20</Height>
					<OnLeftClick>
						ui -unload scripts\\EQ2OgreCommon\\OgreZoneReset\\EQ2OgreZoneResetXML.XML
						if ${Script[EQ2OgreZoneReset](exists)}
							endscript EQ2OgreZoneReset
					</OnLeftClick>
				</CommandButton>
			</Children>
		</TitleBar>

		<Children>
				<Text name='TextInstructions1' template='Text'>
					<X>305</X>
					<Y>50</Y>
					<Width>100</Width>
					<Height>180</Height>
					<Alignment>Left</Alignment>
					<Wrap />
					<Text>Double click zones from the left, to move them to the right.</Text>
				</Text>
				<Text name='TextInstructions2' template='Text'>
					<X>300</X>
					<Y>200</Y>
					<Width>100</Width>
					<Height>180</Height>
					<Alignment>Right</Alignment>
					<Wrap />
					<Text>To remove zones, left click, then right click on the zone.</Text>
				</Text>
				<Text name='TextFullZoneList' template='Text'>
					<X>50</X>
					<Y>10</Y>
					<Width>100</Width>
					<Height>10</Height>
					<Alignment>Left</Alignment>
					<Wrap />
					<Text>Full Zone list</Text>
				</Text>
				<Text name='TextResetZoneList' template='Text'>
					<X>340</X>
					<Y>10</Y>
					<Width>100</Width>
					<Height>10</Height>
					<Alignment>Left</Alignment>
					<Wrap />
					<Text>Zone List to Reset</Text>
				</Text>
				<Button Name="ButtonCode1" template='CodeButton'>
	        <OnLeftClick>
	          variable index:string TempIndex
            EQ2:GetPersisentZones[TempIndex]
            variable int xx=0
            This.Parent.FindChild[lstboxFullZoneList]:ClearItems
            while ${TempIndex[${xx:Inc}](exists)}
              This.Parent.FindChild[lstboxFullZoneList]:AddItem["${TempIndex[${xx}]}"]
	        </OnLeftClick>
	        <OnLoad>
            declarevariable OgreZoneResetReloadListCode int global
            OgreZoneResetReloadListCode:Set[${This.ID}]
          </OnLoad>
	      </Button>
				<ListBox Name='lstboxFullZoneList' template='ListBox'>
					<X>15</X>
					<Y>25</Y>
					<Width>280</Width>
					<Height>345</Height>
					<Sort>User</Sort>
					<OnRightClick>
						if ${This.SelectedItem.ID}
						{
							;This:RemoveItem[${This.SelectedItem.ID}]
						}
					</OnRightClick>
					<OnDoubleLeftClick>
						if ${This.SelectedItem.ID} &amp;&amp; !${UIElement[${LstBoxOgreZoneResetResetZoneListID}].ItemByText[${This.SelectedItem}](exists)}
							UIElement[${LstBoxOgreZoneResetResetZoneListID}]:AddItem["${This.SelectedItem}"]
					</OnDoubleLeftClick>
					<OnLoad>
            declarevariable LstBoxOgreZoneResetFullZoneListID int global
            LstBoxOgreZoneResetFullZoneListID:Set[${This.ID}]
            variable index:string TempIndex
            EQ2:GetPersisentZones[TempIndex]
            if !${TempIndex[1](exists)}
            {
            	EQ2Execute /togglezonereuse
            	timedcommand 5 EQ2Execute /togglezonereuse
            	timedcommand 6 UIElement[${OgreZoneResetReloadListCode}]:LeftClick
            }
            else
            	UIElement[${OgreZoneResetReloadListCode}]:LeftClick
          </OnLoad>
					<OnUnLoad>
							deletevariable LstBoxOgreZoneResetFullZoneListID
					</OnUnLoad>
				</ListBox>
				<ListBox Name='lstboxResetZoneList' template='ListBox'>
					<X>400</X>
					<Y>25</Y>
					<Width>270</Width>
					<Height>315</Height>
					<Sort>User</Sort>
					<OnRightClick>
						if ${This.SelectedItem.ID}
						{
							This:RemoveItem[${This.SelectedItem.ID}]
						}
					</OnRightClick>
					<OnDoubleLeftClick>
						
					</OnDoubleLeftClick>
					<OnLoad>
						declarevariable LstBoxOgreZoneResetResetZoneListID int global
						LstBoxOgreZoneResetResetZoneListID:Set[${This.ID}]
					</OnLoad>
					<OnUnLoad>
							deletevariable LstBoxOgreZoneResetResetZoneListID
					</OnUnLoad>
				</ListBox>
				<checkbox name='chkboxConfirmZoneResets' template='chkbox'>
					<X>475</X>
					<Y>30</Y>
					<Text>Confirm Zone Resets</Text>
					<Wrap />
					<visible>0</visible>
					<OnLoad>
						declarevariable ChkBoxOgreZoneResetConfirmZoneResetsID int global
						ChkBoxOgreZoneResetConfirmZoneResetsID:Set[${This.ID}]
					</OnLoad>
					<OnUnLoad>
							deletevariable ChkBoxOgreZoneResetConfirmZoneResetsID
					</OnUnLoad>
				</checkbox>
				<Text name='TextConfirmNote' template='Text'>
					<X>500</X>
					<Y>55</Y>
					<Width>175</Width>
					<Height>80</Height>
					<Alignment>Left</Alignment>
					<visible>0</visible>
					<Wrap />
					<Text> - NOTE: If you have another script running that confirms these the zone reset pops up, do NOT select this.</Text>
				</Text>
				<CommandButton Name="ResetZonesLocal" template='Button'>
					<X>400</X>
					<Y>340</Y>
          <Visible>0</Visible>
					<Width>130</Width>
					<Height>30</Height>
					<Text>Reset MY zones only</Text>
					<Alignment>Center</Alignment>
					<OnLeftClick>
						runscript "${LavishScript.HomeDirectory}/Scripts/EQ2OgreCommon/OgreZoneReset/EQ2OgreZoneResetXMLCall" local
					</OnLeftClick>
				</CommandButton>
      <CommandButton Name="ResetZonesIRC" template='Button'>
        <X>400</X>
        <Y>340</Y>
        <Width>130</Width>
        <Height>30</Height>
        <Text>Reset zones via IRC</Text>
        <Alignment>Center</Alignment>
        <OnLeftClick>
          runscript "${LavishScript.HomeDirectory}/Scripts/EQ2OgreCommon/OgreZoneReset/EQ2OgreZoneResetXMLCall" irc
        </OnLeftClick>
      </CommandButton>
				<CommandButton Name="ResetZonesRelay" template='Button'>
					<X>550</X>
					<Y>340</Y>
					<Width>130</Width>
					<Height>30</Height>
					<Text>Relay Reset zones</Text>
					<Alignment>Center</Alignment>
					<OnLeftClick>
						runscript "${LavishScript.HomeDirectory}/Scripts/EQ2OgreCommon/OgreZoneReset/EQ2OgreZoneResetXMLCall" relay
					</OnLeftClick>
				</CommandButton>
				<CommandButton Name="Clear" template='Button'>
					<X>500</X>
					<Y>350</Y>
          <Visible>0</Visible>
					<Width>110</Width>
					<Height>20</Height>
					<Text>Clear</Text>
					<Alignment>Center</Alignment>
					<OnLeftClick>
            ui -reload -skin EQ2-Green "${LavishScript.HomeDirectory}/Scripts/eq2ogrecommon/OgreZonereset/eq2ogrezoneresetxml.xml"
          </OnLeftClick>
				</CommandButton>


		</Children>
	</Window>

</ISUI>