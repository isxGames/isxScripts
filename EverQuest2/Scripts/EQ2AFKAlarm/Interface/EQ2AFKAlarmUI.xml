<?xml version="1.0" encoding="UTF-8"?>
<ISUI>
	<Window name='EQ2AFKAlarm Console'>
		<Visible>0</Visible>
		<X>150</X>
		<Y>150</Y>
		<Width>600</Width>
		<Height>200</Height>
		<Resizable />
		<StorePosition>1</StorePosition>
		<Children>
			<console name='Output'>
				<X>0</X>
				<Y>0</Y>
				<Height>100%</Height>
				<Width>100%</Width>
			</console>
		</Children>
	</Window>

	<Window name='EQ2AFKAlarm'>
		<X>500</X>
		<Y>500</Y>
		<Width>150</Width>
		<Height>245</Height>
		<StorePosition>1</StorePosition>
		<TitleBar template='window.TitleBar'>
			<Children>
				<text Name='Title' template='window.TitleBar.title' />
				<button Name='Minimize' template='window.TitleBar.Minimize' />
				<commandbutton name='Custom Close Button' template='window.TitleBar.Close'>
					<Command>Script[EQ2AFKAlarm]:End</Command>
				</commandbutton>
			</Children>
		</TitleBar>
		<Children>
			<commandbutton name='Configuration'>
				<X>10</X>
				<Y>5</Y>
				<Width>130</Width>
				<Height>20</Height>
				<Text>Configuration</Text>
				<Command>execute ${If[${UIElement[EQ2AFKAlarm Config](exists)},"ui -unload \"&filepath;/EQ2AFKAlarm_ConfigUI.xml\"","ui -load -skin EQ2-Green \"&filepath;/EQ2AFKAlarm_ConfigUI.xml\""]}</Command>
			</commandbutton>

			<Text name='RunningTime'>
				<X>10</X>
				<Y>30</Y>
				<Width>130</Width>
				<Height>20</Height>
				<Alignment>Center</Alignment>
				<Font>
					<Color>FFFFFF00</Color>
				</Font>
				<Text>${Math.Calc[(${Script[eq2afkalarm].RunningTime}/1000/60/60)%60].Int.LeadingZeroes[2]}:${Math.Calc[(${Script[eq2afkalarm].RunningTime}/1000/60)%60].Int.LeadingZeroes[2]}:${Math.Calc[(${Script[eq2afkalarm].RunningTime}/1000)%60].Int.LeadingZeroes[2]}</Text>
			</Text>

			<Text name='Says'>
				<X>10</X>
				<Y>50</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FFffffff</Color>
				</Font>
				<Text>Says:</Text>
			</Text>
			<Text name='Says Count'>
				<X>r40</X>
				<Y>50</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerSays]},${Script[EQ2AFKAlarm].Variable[CountSays]},OFF]}</Text>
			</Text>

			<Text name='Tells'>
				<X>10</X>
				<Y>70</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FFff80ff</Color>
				</Font>
				<Text>Tells:</Text>
			</Text>
			<Text name='Tells Count'>
				<X>r40</X>
				<Y>70</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerTells]},${Script[EQ2AFKAlarm].Variable[CountTells]},OFF]}</Text>
			</Text>

			<Text name='Group'>
				<X>10</X>
				<Y>90</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FFaaaaff</Color>
				</Font>
				<Text>Group:</Text>
			</Text>
			<Text name='Group Count'>
				<X>r40</X>
				<Y>90</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerGroup]},${Script[EQ2AFKAlarm].Variable[CountGroup]},OFF]}</Text>
			</Text>

			<Text name='Raid'>
				<X>10</X>
				<Y>110</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FFff7f00</Color>
				</Font>
				<Text>Raid:</Text>
			</Text>
			<Text name='Raid Count'>
				<X>r40</X>
				<Y>110</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerRaid]},${Script[EQ2AFKAlarm].Variable[CountRaid]},OFF]}</Text>
			</Text>

			<Text name='Guild'>
				<X>10</X>
				<Y>130</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FF40ff40</Color>
				</Font>
				<Text>Guild:</Text>
			</Text>
			<Text name='Guild Count'>
				<X>r40</X>
				<Y>130</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerGuild]},${Script[EQ2AFKAlarm].Variable[CountGuild]},OFF]}</Text>
			</Text>

			<Text name='Officer'>
				<X>10</X>
				<Y>150</Y>
				<Width>100</Width>
				<Height>20</Height>
				<Font>
					<Color>FF40c040</Color>
				</Font>
				<Text>Officer:</Text>
			</Text>
			<Text name='Officer Count'>
				<X>r40</X>
				<Y>150</Y>
				<Width>40</Width>
				<Height>20</Height>
				<Text>${If[${Script[EQ2AFKAlarm].Variable[TriggerOfficer]},${Script[EQ2AFKAlarm].Variable[CountOfficer]},OFF]}</Text>
			</Text>
			
		</Children>
	</Window>
</ISUI>