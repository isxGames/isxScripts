		<X>450</X>
		<Y>90</Y>
		<Width>170</Width>
		<Height>120</Height>
		<Sort>User</Sort>
		<OnRightClick>
			if ${This.SelectedItem.ID}
			{
				This:RemoveItem[${This.SelectedItem.ID}]
			}
		</OnRightClick>
		<OnLoad>
