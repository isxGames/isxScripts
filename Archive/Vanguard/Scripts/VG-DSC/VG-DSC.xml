		<Texture Template="vg.button.Texture" />
		<TextureHover Template="vg.button.TextureHover" />
		<TexturePressed Template="vg.button.TexturePressed" />
	</Template>

	<!-- HUD Window -->
	<Template Name="CVG.Window.Client">
		<Y>16</Y>
		<Height>r16</Height>
		<Width>100%</Width>
	</Template>
