		<HeightResizable>0</HeightResizable>
		<TitleBar Template="VG.Window.TitleBar" />
		<OffsetTitleBarHeight />
		<Client Template="CVG.Window.Client" />
		<BackgroundColor>FF000000</BackgroundColor>
		<StorePosition>1</StorePosition>
	</Template>
	
